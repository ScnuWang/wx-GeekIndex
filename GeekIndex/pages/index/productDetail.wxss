}










.charts {
    background-color: #fff;
    min-height: 100%;
}
.competitor {
   color:#2F4F4F;
   font-size: 14px;
   padding-left: 10px;
   padding-top: 8px;
}
.competitor-tittle {
   color:#f7982a;
   font-size: 16px;
   padding-top: 8px;
}

.tab{
  display: -webkit-flex;
	/*display: flex;*/
	flex-direction: column;
	height: 100%;
}
.tab-nav{
	height: 80rpx;
	background: #fff;
	border-bottom: 1rpx solid #ddd;
  display: -webkit-flex;
	/*display: flex;*/
	line-height: 79rpx;
	position: relative;
}
.tab-nav text{
	display: block;
	flex: 1;
	text-align: center;
	width: 25%;
}
.tab-nav text.active{
	color: #f7982a;
}
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #f7982a;
	transition: all 0.3s;
}
.tab-content{
	width: 400%;
	height: 100%;
	overflow: hidden;
  display: -webkit-flex;
	/*display: flex;*/
}
.tab-content .tab-panel{
	height: 100%;
	overflow-y: auto;
	overflow-x: hidden;
	flex: 1;
	/* flex: 0 0 20%; */
}
