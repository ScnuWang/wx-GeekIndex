/* pages/index/productDetail.wxss */
page{
	background: #f6f8fa;
	color: #333;
  display: flex;
  flex-direction: column;
 	font: normal 30rpx/1.68 -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
.product{
    display: flex;
    flex-direction: row;
    border: 2rpx solid #ccc;
    margin: 10rpx 20rpx;
    box-shadow: 0 4rpx 10rpx #ccc;
    background-color: #fff;
    padding-left: 10rpx;
}
.product-info{
    padding-right: 20rpx;
}
.text-info{
    display: flex;
    flex-direction: column;
    font-size: 12px;
	  color: #888;
    padding-left: 20rpx;  
}

.swiper-tab{
  display: flex;
  flex-direction: row;
  width: 100%; 
  border-bottom: 2rpx solid #f7982a; 
  text-align: center; 
  line-height: 80rpx;
}
.swiper-tab-list{
  font-size: 16px; 
  display: flex;
  justify-content: center;
  width: 50%; 
  color: #777777; 
}
.on{
  color: #f7982a; 
  border-bottom: 5rpx solid #f7982a;
}
.swiper-box{ 
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 1500px;
 }
.charts {
    background-color: #f6f8fa;
    min-height: 100%;
    overflow: hidden;
}
.competitor {
   color:#2F4F4F;
   font-size: 14px;
   display: flex;
   flex-direction: column;
}
.competitor-tittle{
    display: flex;
    color:#f7982a;
    font-size: 16px;
    padding-left: 5%;
}
.competitor-context{
    display: flex;
    flex-direction: column;
    border: 1px solid #ccc;
    box-shadow: 0 2px 5px #ccc;
    background-color: #fff;
    color: #888;
    font-size: 14px;
    margin: 6px 10px;
    padding-left: 10px;
}

.canvas{
   display: flex;
    border: 1px solid #ccc;
    box-shadow: 0 2px 5px #ccc;
    background-color: #fff;
    margin: 10px 10px;
    width: 95%;
    margin-right: 10px;
    height: 200px;
}