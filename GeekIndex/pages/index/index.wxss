/**index.wxss**/
.content{
    background-color: #fff;
    min-height: 100%;
}
.product{
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    border: 1px solid #ccc;
    margin: 5px 3px;
    box-shadow: 0 2px 5px #ccc;
    background-color: #FFFFFF;
    padding-left: 5px;
}
.pic image{
    width:130px;
    height: 130px;
    padding-top: 10px;
}
.product-info{
    padding-left: 10px;
}
.base-info{
    color:#2F4F4F;
    font-size: 12px;
    padding-top: 8px;
    line-height: 20px;
}

.search{
    display: -webkit-flex;
    display: flex;
    padding: 5px;
    font-size: 18px;
    background-color: #FFFFFF;
}
.search button{
    width: 30%;
    height: 40px;
    line-height: 40px;
    margin-right: 5px;
    background-color: #00BFFF;
}

.input{
    width:70%;
    height: 38px;
    line-height: 38px;
    border: 1px solid #ccc;
    box-shadow: inset 0 0 10px #ccc;
    color: #000;
    background-color:#fff;
    border-radius: 5px;
}